<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ============================================ -->
    <!-- PERMISOS CRÍTICOS PARA BLINDNAV -->
    <!-- ============================================ -->
    
    <!-- Cámara: Acceso al flujo de video para detección -->
    <uses-permission android:name="android.permission.CAMERA" />
    
    <!-- Vibración: Feedback háptico de seguridad -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- GPS: Navegación por ubicación -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Micrófono: Comandos de voz -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Internet: Reconocimiento de voz, geocoding y OSM -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Almacenamiento: Cache de tiles OSM -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    
    <!-- Hardware features -->
    <uses-feature android:name="android.hardware.camera.ar" android:required="false" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />
    
    <!-- Mantener pantalla activa durante navegación -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".BlindNavApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlindNav"
        tools:targetApi="34">

        <!-- Metadatos de ARCore -->
        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />

        <!-- ============================================ -->
        <!-- PANTALLA PRINCIPAL: HomeActivity (LAUNCHER) -->
        <!-- ============================================ -->
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BlindNav">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ============================================ -->
        <!-- PREVIEW DE RUTA: RoutePreviewActivity -->
        <!-- ============================================ -->
        <activity
            android:name=".ui.preview.RoutePreviewActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.BlindNav" />

        <!-- ============================================ -->
        <!-- NAVEGACIÓN: NavigationActivity (Cámara + Sonar) -->
        <!-- ============================================ -->
        <activity
            android:name=".ui.navigation.NavigationActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:keepScreenOn="true"
            android:theme="@style/Theme.BlindNav" />

        <!-- ============================================ -->
        <!-- LEGACY: MainActivity (mantenida por compatibilidad) -->
        <!-- ============================================ -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:keepScreenOn="true"
            android:theme="@style/Theme.BlindNav" />

    </application>

</manifest>
