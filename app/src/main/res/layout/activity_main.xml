<?xml version="1.0" encoding="utf-8"?>
<!--
    BlindNav - Main Activity Layout
    
    CAPAS (de atrÃ¡s hacia delante):
    1. PreviewView (cÃ¡mara) - FONDO
    2. BoundingBoxOverlay (detecciÃ³n) - TRANSPARENTE
    3. HUD Datos (GPS, brÃºjula, checkpoint) - ARRIBA
    4. Controles (FABs, botones) - FLOTANTES
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.MainActivity">

    <!-- ============================================ -->
    <!-- CAPA 1: CÃMARA (FONDO) -->
    <!-- ============================================ -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:scaleType="fillCenter" />

    <!-- ============================================ -->
    <!-- CAPA 2: OVERLAY DE DETECCIÃ“N (TRANSPARENTE) -->
    <!-- ============================================ -->
    <com.blindnav.app.ui.overlay.BoundingBoxOverlay
        android:id="@+id/boundingBoxOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ============================================ -->
    <!-- CAPA 3: HUD DE DATOS (ARRIBA) -->
    <!-- ============================================ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/hudCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#CC000000"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Estado del sistema -->
            <TextView
                android:id="@+id/tvSystemStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŸ¢ SISTEMA ACTIVO"
                android:textColor="#4CAF50"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="#333333" />

            <!-- Fila 1: GPS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ GPS:"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvGpsCoordinates"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Esperando seÃ±al..."
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvGpsAccuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â±0m"
                    android:textColor="#FFEB3B"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Fila 2: BrÃºjula -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§­ DirecciÃ³n:"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCompassDirection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="N (0Â°)"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Fila 3: PrÃ³ximo Checkpoint -->
            <LinearLayout
                android:id="@+id/checkpointRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ PrÃ³ximo:"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvNextCheckpoint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="--"
                    android:textColor="#2196F3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCheckpointDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0m"
                    android:textColor="#FF9800"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================ -->
    <!-- INDICADOR DE PELIGRO (CENTRO) -->
    <!-- ============================================ -->
    <TextView
        android:id="@+id/tvHazardIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/hazard_badge_background"
        android:padding="16dp"
        android:text="âš ï¸ ALERTA"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/hudCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- ============================================ -->
    <!-- SWITCH MODO SONAR (ARRIBA DERECHA) -->
    <!-- ============================================ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sonarSwitchCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#CC000000"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/hudCard"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”Š Sonar"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchSonar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:thumbTint="#4CAF50"
                app:trackTint="#666666" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================ -->
    <!-- PANEL DE GRABACIÃ“N (VISIBLE DURANTE RECORDING) -->
    <!-- ============================================ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/recordingPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="#CC212121"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@id/controlsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TÃ­tulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ REPORTAR EVENTO"
                android:textColor="#FFEB3B"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Grid 2x2 de botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReportCrossing"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="ðŸ¦“ CRUCE"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:backgroundTint="#1565C0"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReportObstacle"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="âš ï¸ OBSTÃCULO"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:backgroundTint="#E65100"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReportTurn"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="â†ªï¸ GIRO"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:backgroundTint="#7B1FA2"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReportInfo"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="â„¹ï¸ INFO"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:backgroundTint="#2E7D32"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <!-- Estado de grabaciÃ³n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvRecordingStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ”´ Grabando..."
                    android:textColor="#FF5252"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStopRecording"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â¹ PARAR"
                    android:textColor="#FF5252"
                    app:strokeColor="#FF5252"
                    app:cornerRadius="8dp" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================ -->
    <!-- CAPA 4: CONTROLES FLOTANTES (ABAJO) -->
    <!-- ============================================ -->
    <LinearLayout
        android:id="@+id/controlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- BotÃ³n GRABAR RUTA (Izquierda) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecordRoute"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="ðŸŽ¬ GRABAR"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:backgroundTint="#C62828"
            app:cornerRadius="28dp"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconTint="#FFFFFF" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- FAB MARCAR EVENTO (Centro-Derecha) -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabMarkEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ EVENTO"
            android:textColor="#FFFFFF"
            app:backgroundTint="#FF6D00"
            app:icon="@android:drawable/ic_menu_myplaces"
            app:iconTint="#FFFFFF" />

    </LinearLayout>

    <!-- ============================================ -->
    <!-- INDICADOR DE VOZ (FLOTANTE) -->
    <!-- ============================================ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/voiceIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:visibility="gone"
        app:cardBackgroundColor="#CC1565C0"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvVoiceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="ðŸŽ¤ Escuchando..."
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
