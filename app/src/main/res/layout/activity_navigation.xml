<?xml version="1.0" encoding="utf-8"?>
<!--
    NavigationActivity - Pantalla de NavegaciÃ³n con CÃ¡mara
    LA ÃšNICA pantalla que usa CameraX y SafetyAnalyzer
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.navigation.NavigationActivity">

    <!-- ============================================ -->
    <!-- CAPA 1: CÃMARA (FONDO) -->
    <!-- ============================================ -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:scaleType="fillCenter" />

    <!-- ============================================ -->
    <!-- CAPA 2: OVERLAY DE DETECCIÃ“N -->
    <!-- ============================================ -->
    <com.blindnav.app.ui.overlay.BoundingBoxOverlay
        android:id="@+id/boundingBoxOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ============================================ -->
    <!-- CAPA 3: INDICADOR DE DIRECCIÃ“N (CENTRO) -->
    <!-- ============================================ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/directionCard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardBackgroundColor="#CC000000"
        app:cardCornerRadius="100dp"
        app:cardElevation="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Flecha de direcciÃ³n -->
            <TextView
                android:id="@+id/tvDirectionArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â¬†ï¸"
                android:textSize="64sp"
                android:rotation="0" />

            <!-- Hora de reloj -->
            <TextView
                android:id="@+id/tvClockDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 en punto"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Distancia -->
            <TextView
                android:id="@+id/tvDistanceToTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="150m"
                android:textColor="#4CAF50"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================ -->
    <!-- CAPA 4: HUD SUPERIOR (INFORMACIÃ“N) -->
    <!-- ============================================ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/hudCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#CC000000"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Estado de navegaciÃ³n -->
            <TextView
                android:id="@+id/tvNavigationStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ§­ NAVEGANDO..."
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:gravity="center" />

            <!-- Destino -->
            <TextView
                android:id="@+id/tvDestinationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="â†’ Farmacia"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- PrÃ³ximo checkpoint -->
            <TextView
                android:id="@+id/tvNextCheckpoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="PrÃ³ximo: Paso de cebra en 50m"
                android:textColor="#AAAAAA"
                android:textSize="14sp"
                android:gravity="center" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================ -->
    <!-- ALERTA DE PELIGRO -->
    <!-- ============================================ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/hazardCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="#E6D32F2F"
        app:cardCornerRadius="12dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/hudCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvHazardWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="âš ï¸ Â¡OBSTÃCULO DETECTADO!"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================ -->
    <!-- PANEL DE GRABACIÃ“N (Solo en modo creador) -->
    <!-- ============================================ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/recordingPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="#CC212121"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottomControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ MARCAR EVENTO"
                android:textColor="#FFEB3B"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCrossing"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="ðŸ¦“"
                    android:textSize="24sp"
                    app:backgroundTint="#1565C0"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnObstacle"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:text="âš ï¸"
                    android:textSize="24sp"
                    app:backgroundTint="#E65100"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTurn"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="â†ªï¸"
                    android:textSize="24sp"
                    app:backgroundTint="#7B1FA2"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================ -->
    <!-- CONTROLES INFERIORES -->
    <!-- ============================================ -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- BotÃ³n Detener -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStop"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:text="â¹ DETENER"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:backgroundTint="#C62828"
            app:cornerRadius="16dp" />

        <!-- Switch Sonar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginStart="12dp"
            app:cardBackgroundColor="#333333"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”Š"
                    android:textSize="20sp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchSonar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:checked="true"
                    app:thumbTint="#4CAF50"
                    app:trackTint="#666666" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
